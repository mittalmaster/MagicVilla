@model MagicVilla_Web.Models.ViewModel.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete VillaNumber </h1>
        <hr />
        <input hidden asp-for="VillaNumber.VillaNo" />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <br />
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-select" />
            </div>
            <div class="col-2">
                <label asp-for="VillaName" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaName" class="form-select"/>                   
             </div>
            <br />
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" disabled class="form-control"></textarea>
                 </div>

            <br />
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn-danger form-control" />

            </div>

        </div>

    </div>






</form>