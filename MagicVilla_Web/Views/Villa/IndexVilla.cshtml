@model IEnumerable<MagicVilla_Web.Models.Dtos.VillaDto>
<br />

<div class="container border p-4 ">
    <div class="row pb-4">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
            </div>
        <div class="col text-end pt-1">
           
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-primary"><i class="bi bi-file-plus"></i>Create Villa</a>
            </div>
        
            <table class="table">
                <tr>                
                    <th>Name</th>
                    <th>Occupancy</th>
                    <th>Price</th>
                    <th></th>                
                </tr>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@(item.Rate.ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit </a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>


                    </td>
                </tr>
                }



            </table>


       

    </div>



</div>